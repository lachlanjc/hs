{
  "trailingSlash": true,
  "github": { "silent": true },
  "rewrites": [
    {
      "source": "/astrocolony/:path*",
      "destination": "/astrocolony/site/:path*"
    },
    {
      "source": "/petit-prince-14/:path*",
      "destination": "/petit-prince-14/site/:path*"
    },
    {
      "source": "/sommeil/:path*",
      "destination": "/sommeil/site/:path*"
    }
  ],
  "builds": [
    { "src": "*", "use": "@vercel/static" },
    { "src": "*/**", "use": "@vercel/static" },
    { "src": "synthesis/package.json", "use": "@vercel/next" },
    { "src": "greenhouse/package.json", "use": "@vercel/next" }
  ]
}
